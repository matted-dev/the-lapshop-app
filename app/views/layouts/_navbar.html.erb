<div class="header">
  <div class="header__content">
    <div class="header__logo">
      <span class="header__logo--the">The</span>
      <span class="header__logo--lapshop">Lapshop</span>
    </div>

  <div class="user-box">
    <% if current_user %>
      <div class="user-box__username">Hi <%= current_user.username %></div>
      <div class="user-box__cart">
        Cart<%= image_tag("cart-icon.png", :alt => "My Cart", :class => "user-box__cart-icon") %>
      </div>
      <div class="user-box__action user-box__signout"><%= link_to "Sign out", destroy_user_session_path, method: :delete %></div>
    <% else %>
      <div class="user-box__action"><%= link_to "Sign up", new_user_registration_path %></div>
      <div class="user-box__action"><%= link_to "Sign in", new_user_session_path %></div>
    <% end %>
  </div>
    
  </div>
</div>